from dataclasses import dataclass

@dataclass
class Year:
    value: int

    def is_leap_year(self) -> bool:
        """
        Determine if the year is a leap year.
        Leap year rules:
        - Divisible by 4, but not by 100, unless divisible by 400.
        """
        return (self.value % 4 == 0 and self.value % 100 != 0) or (self.value % 400 == 0)

def get_year_input() -> Year:
    """Get validated year input from user."""
    while True:
        try:
            year_input = int(input("Enter a year: "))
            if year_input <= 0:
                raise ValueError
            return Year(year_input)
        except ValueError:
            print("Invalid input. Please enter a positive integer for the year.")

def main():
    print("Welcome to the Leap Year Checker!")

    year = get_year_input()

    if year.is_leap_year():
        print(f"✅ {year.value} is a leap year.")
    else:
        print(f"❌ {year.value} is not a leap year.")

    print("\nThanks for visiting! Hope this helps you.")

if __name__ == "__main__":
    main()
