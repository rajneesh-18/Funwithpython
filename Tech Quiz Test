from dataclasses import dataclass
from typing import List

@dataclass
class Question:
    prompt: str
    answer: str

@dataclass
class Quiz:
    questions: List[Question]
    score: int = 0

    def start(self) -> None:
        """Run the quiz and calculate the score."""
        print("üìù Let's start the Quiz!\n")
        for question in self.questions:
            user_answer = input(f"{question.prompt} ").strip()
            if user_answer.lower() == question.answer.lower():
                print("‚úÖ Correct!\n")
                self.score += 1
            else:
                print(f"‚ùå Incorrect! The correct answer is: {question.answer}\n")
        
        self.display_results()

    def display_results(self) -> None:
        """Display quiz results."""
        total = len(self.questions)
        print("üèÅ Quiz Complete!")
        print(f"Your score is: {self.score} out of {total}\n")

        if self.score == total:
            print("üéâ Excellent! Perfect score!")
        elif self.score >= total * 0.6:
            print("üëç Good job! Keep learning!")
        else:
            print("üí° Try again for a better score!")
        
        print("\nThanks for visiting here!")

def main():
    questions = [
        Question("Which technology is booming right now?", "AI"),
        Question("Who created ChatGPT?", "Sam Altman"),
        Question("Most popular IT hub in the world?", "Silicon Valley"),
        Question("Which programming language is the mother of all modern languages?", "C"),
        Question("Which platform is used to store code online?", "GitHub")
    ]

    quiz = Quiz(questions)
    quiz.start()

if __name__ == "__main__":
    main()
